<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_protect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_rounded">

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_8"
            android:layout_marginTop="@dimen/padding_8"
            android:background="@color/transparent"
            android:src="@drawable/ic_close"
            app:tint="@color/text_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icon"
            android:layout_marginTop="@dimen/padding_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_protect"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/close_button" />

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="@dimen/padding_24"
            android:layout_marginStart="@dimen/padding_24"
            android:layout_marginEnd="@dimen/padding_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            android:layout_width="match_parent"
            android:textColor="@color/text_primary"
            android:textSize="26sp"
            android:fontFamily="sans-serif-medium"
            android:text="If your event gets canceled, weâ€™ll make it right."
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/first_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_baseline_check_24"
            android:drawablePadding="@dimen/padding_16"
            android:fontFamily="sans-serif"
            android:layout_marginStart="@dimen/padding_24"
            android:layout_marginEnd="@dimen/padding_24"
            android:layout_marginTop="@dimen/padding_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:text="Canceled events protected"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_14"
            app:drawableTint="@color/text_primary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/second_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_baseline_check_24"
            android:drawablePadding="@dimen/padding_16"
            android:fontFamily="sans-serif"
            android:layout_marginStart="@dimen/padding_24"
            android:layout_marginEnd="@dimen/padding_24"
            android:layout_marginTop="@dimen/padding_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_text"
            android:text="Delivery in time"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_14"
            app:drawableTint="@color/text_primary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/third_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_baseline_check_24"
            android:drawablePadding="@dimen/padding_16"
            android:fontFamily="sans-serif"
            android:layout_marginStart="@dimen/padding_24"
            android:layout_marginEnd="@dimen/padding_24"
            android:layout_marginTop="@dimen/padding_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/second_text"
            android:text="Dedicated customer support"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_14"
            app:drawableTint="@color/text_primary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/forth_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_baseline_check_24"
            android:drawablePadding="@dimen/padding_16"
            android:fontFamily="sans-serif"
            android:layout_marginStart="@dimen/padding_24"
            android:layout_marginEnd="@dimen/padding_24"
            android:layout_marginTop="@dimen/padding_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/third_text"
            android:text="Same seats you ordered or better value "
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_14"
            app:drawableTint="@color/text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/more_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_normal_height"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_34"
            android:layout_marginEnd="@dimen/padding_16"
            android:layout_marginBottom="@dimen/padding_28"
            android:fontFamily="sans-serif"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Learn more"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_14"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@+id/forth_text"
            app:strokeColor="@color/separator"
            tools:textColor="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>