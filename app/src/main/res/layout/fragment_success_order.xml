<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/success_order_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".features.payment.SuccessOrderFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/success_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/success_title"
                android:layout_gravity="center"
                android:src="@drawable/ic_check" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/success_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/padding_16"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/your_order_n_has_been_placed_n_succesfully"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_28" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/success_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_normal_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/padding_50"
                android:layout_marginEnd="@dimen/padding_50"
                android:backgroundTint="@color/white"
                android:fontFamily="sans-serif"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/ok"
                android:textColor="@color/colorAccent"
                app:cornerRadius="20dp" />

        </FrameLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>