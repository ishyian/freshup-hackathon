<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/city_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingTop="@dimen/padding_12"
    android:paddingBottom="@dimen/padding_12">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pin_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/padding_16"
        android:layout_marginEnd="@dimen/padding_16"
        android:visibility="visible"
        app:srcCompat="@drawable/ic_marker_outline" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/city_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_primary"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|start"
        android:layout_marginEnd="@dimen/padding_16"
        android:layout_toEndOf="@id/pin_image_view"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/text_size_14"
        tools:text="@string/include" />

</RelativeLayout>
