<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/offset12"
    app:cardElevation="0dp"
    app:cardCornerRadius="@dimen/offset20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/offset10">

        <TextView
            android:id="@+id/text_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Дніпро"
            android:textColor="@color/color_2"
            android:textSize="@dimen/text16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_whom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat"
            android:text="Кому потрібна"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_city" />

        <TextView
            android:id="@+id/text_whom2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/montserrat"
            android:text="Всього потреб"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_description" />

        <TextView
            android:id="@+id/text_whom3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat"
            android:text="Мені допомогли"
            android:textColor="@color/color_3"
            android:textSize="@dimen/text12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_whom2" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/color_2"
            android:textSize="@dimen/text12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_whom"
            tools:text="Ми знаходимись в червоній зоні,я зараз з двома дітками сиджу дома в декреті .хлопчику..." />

        <TextView
            android:id="@+id/text_allcount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/color_2"
            android:textSize="@dimen/text12"
            app:layout_constraintBottom_toBottomOf="@+id/text_whom2"
            app:layout_constraintStart_toEndOf="@+id/text_whom2"
            app:layout_constraintTop_toTopOf="@+id/text_whom2"
            tools:text="(6)" />

        <TextView
            android:id="@+id/text_help_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/color_2"
            android:textSize="@dimen/text12"
            app:layout_constraintBottom_toBottomOf="@+id/text_whom3"
            app:layout_constraintStart_toEndOf="@+id/text_whom3"
            app:layout_constraintTop_toTopOf="@+id/text_whom3"
            tools:text="(6)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/color_2"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Допомогти"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text14"
            app:cornerRadius="@dimen/offset50"
            app:layout_constraintBottom_toBottomOf="@+id/text_whom3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_whom2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>