<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_16"
    android:layout_marginTop="@dimen/padding_12"
    android:layout_marginEnd="@dimen/padding_16"
    android:layout_marginBottom="@dimen/padding_8"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/user_image_view"
        android:layout_width="@dimen/card_image_size"
        android:layout_height="@dimen/card_image_size"
        android:layout_marginEnd="@dimen/padding_19"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        tools:ignore="ContentDescription"
        android:src="@drawable/ic_logo_rounded" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_2"
        android:layout_toEndOf="@+id/user_image_view"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:lineSpacingExtra="@dimen/padding_6"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_14"
        tools:text="title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text_view"
        android:layout_marginTop="@dimen/padding_6"
        android:layout_toEndOf="@+id/user_image_view"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_12"
        tools:text="date" />

</RelativeLayout>
